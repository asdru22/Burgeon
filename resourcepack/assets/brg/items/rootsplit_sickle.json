{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:custom_model_data",
    "index": 0,
    "cases": [
      {
        "when": "combined",
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:display_context",
          "cases": [
            {
              "when": "gui",
              "model": {
                "type": "minecraft:composite",
                "models": [
                  {
                    "type": "minecraft:model",
                    "model": "brg:item/rootsplit_staff_small"
                  },
                  {
                    "type": "minecraft:model",
                    "model": "brg:item/rootsplit_staff/background"
                  },
                  {
                    "type": "minecraft:range_dispatch",
                    "property": "minecraft:custom_model_data",
                    "entries": [
                      {
                        "threshold": 16,
                        "model": {
                          "type": "minecraft:model",
                          "model": "brg:item/blooming_bulb/6"
                        }
                      }
                    ],
                    "fallback": {
                      "type": "minecraft:model",
                      "model": "brg:item/rootsplit_staff/background"
                    }
                  }
                ]
              }
            },
            {
              "when": "ground",
              "model": {
                "type": "minecraft:model",
                "model": "brg:item/rootsplit_staff_small"
              }
            },
            {
              "when": "head",
              "model": {
                "type": "minecraft:model",
                "model": "brg:item/rootsplit_staff_small"
              }
            },
            {
              "when": "fixed",
              "model": {
                "type": "minecraft:model",
                "model": "brg:item/rootsplit_staff_small"
              }
            }
          ],
          "fallback": {
            "type": "minecraft:model",
            "model": "brg:item/rootsplit_staff"
          }
        }
      }
    ],
    "fallback": {
      "type": "minecraft:condition",
      "property": "minecraft:using_item",
      "on_true": {
        "type": "minecraft:model",
        "model": "brg:item/rootsplit_sickle_using"
      },
      "on_false": {
        "type": "minecraft:model",
        "model": "brg:item/rootsplit_sickle"
      }
    }
  }
}
